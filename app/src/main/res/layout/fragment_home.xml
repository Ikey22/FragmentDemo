<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ans="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".HomeFragment">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_margin="40dp"
        ans:layout_constraintTop_toTopOf="parent"
        ans:layout_constraintEnd_toEndOf="parent"
        ans:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ans:layout_constraintTop_toBottomOf="@id/logo"
        ans:layout_constraintStart_toStartOf="parent"
        ans:layout_constraintEnd_toEndOf="parent"
        android:hint="@string/full_name"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ans:layout_constraintTop_toBottomOf="@id/input_layout_one"
        ans:layout_constraintStart_toStartOf="parent"
        ans:layout_constraintEnd_toEndOf="parent"
        android:hint="@string/track"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ans:layout_constraintTop_toBottomOf="@id/input_layout_two"
        ans:layout_constraintStart_toStartOf="parent"
        ans:layout_constraintEnd_toEndOf="parent"
        android:hint="Goals for this Android Training"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        ans:layout_constraintEnd_toEndOf="parent"
        android:text="Submit"
        android:background="@drawable/background"
        ans:layout_constraintStart_toStartOf="parent"
        ans:layout_constraintTop_toBottomOf="@+id/input_layout_three" />


</androidx.constraintlayout.widget.ConstraintLayout>